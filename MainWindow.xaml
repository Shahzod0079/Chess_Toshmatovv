            <Grid Background="White" Width="50" Height="50" Grid.Column="7" Grid.Row="5" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="0" Grid.Row="5" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="2" Grid.Row="5" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="4" Grid.Row="5" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="6" Grid.Row="5" Mouse.MouseDown="SelectTile"/>

            <Grid Background="White" Width="50" Height="50" Grid.Column="0" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
            <Grid Background="White" Width="50" Height="50" Grid.Column="2" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
            <Grid Background="White" Width="50" Height="50" Grid.Column="4" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
            <Grid Background="White" Width="50" Height="50" Grid.Column="6" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="1" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="3" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
            <Grid Background="#FF9A6400" Width="50" Height="50" Grid.Column="5" Grid.Row="6" Mouse.MouseDown="SelectTile"/>
